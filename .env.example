# API
API_PORT=4000
REDIS_URL=redis://redis:6379/0
QUEUE_TTS_BLOCK=tts:block
QUEUE_CONCURRENCY=1

# Storage (MinIO/S3)
STORAGE_KIND=s3
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=tts-vtn
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=1

# TTS Engine (Piper)
PIPER_CMD=/usr/local/bin/piper
PIPER_VOICE=/app/voices/en/en_US-amy-medium.onnx

# Worker defaults
ENGINE_DEFAULT=piper
HQ_TOGGLE=true
PIPER_MODEL=/models/piper/en/en_US-amy-medium.onnx
PIPER_VOICE_ID=en_US-amy-medium

# Frontend
VITE_API_BASE=http://localhost:4000
FRONTEND_PORT=3000
