# API
API_PORT=4000
REDIS_URL=redis://redis:6379/0
STORAGE_ROOT=/data/storage
API_INLINE_WORKER=0
TZ=Asia/Ho_Chi_Minh
QUEUE_TTS_BLOCK=tts:block
QUEUE_CONCURRENCY=1
SNAPSHOT_TTL_SEC=900

# Worker
ENGINE_DEFAULT=piper
HQ_TOGGLE=true
CUDA=auto   # tận dụng GPU nếu có, không thì chạy CPU
PIPER_MODEL=/models/piper/en/en_US-amy-medium.onnx
PIPER_VOICE_ID=en_US-amy-medium

# QC
QC_ENABLE=1
QC_LUFS_TARGET=-16
QC_LUFS_TOLERANCE=1
QC_TRUEPEAK_DB_MAX=-1.0
QC_CLIP_PCT_MAX=0.1
QC_SCORE_MIN=0.70
QC_AUTONORMALIZE=1
QC_NORM_LUFS_TARGET=-16
QC_NORM_TRUEPEAK_DB_MAX=-1.0
QC_TRUEPEAK_SAFETY_DB=0.6

# Merge (optional)
TTS_TAIL_MERGE=1
TTS_GAP_MS=450
TTS_FADE_MS=12

# Frontend
VITE_API_BASE=http://localhost:4000
FRONTEND_PORT=3000

#S3/MinIO
STORAGE_KIND=s3
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=tts-vtn
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=1
S3_SECURE=0
